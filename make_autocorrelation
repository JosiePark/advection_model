include standard_defs.mk

TRANSPORT_SOURCE = $(STOCH_DIR)/autocorrelation.f
TRANSPORT_EXE = $(BUILD_DIR)/autocorrelation


VPATH = build 
transport: subsystem1 subsystem3 subsystem2 $(TRANSPORT_EXE)

subsystem1:
	cd $(INPUT_DIR) && $(MAKE)

subsystem2:
	cd $(VAR_DIR) && $(MAKE)

subsystem3:
	cd $(NETCDF_DIR) && $(MAKE)


$(TRANSPORT_EXE): $(TRANSPORT_SOURCE) $(BUILD_DIR)/*.o
	$(CC) $(TRANSPORT_SOURCE) $(BUILD_DIR)/*.o -o $(TRANSPORT_EXE) $(CFLAGS) $(INCLUDES) $(LIBS) $(LINKS)


clean: 
	cd $(BUILD_DIR) 
	 

	





